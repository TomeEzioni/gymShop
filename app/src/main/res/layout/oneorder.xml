<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מספר הזמנה:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOrderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456" />

            <TextView
                android:id="@+id/tvItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="פריטים בהזמנה:"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- כאן תוכל להוסיף RecyclerView או LinearLayout דינמי עבור הפריטים -->

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מחיר כולל:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvTotalPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₪99.99" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="סטטוס:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ממתין למשלוח" />

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="משתמש:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvUserValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם המשתמש / אימייל" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תאריך:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvTimestampValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-05-22 12:34" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>