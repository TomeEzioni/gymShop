<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo" />

        <ImageButton
            android:id="@+id/btn_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shopping"
            android:background="@android:color/transparent"
            android:contentDescription="סל קניות" />

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צור קשר" />

        <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="דף הבית" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">

        <Button
            android:id="@+id/btn_food"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="אוכל"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_fitness"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="מתקני ספורט"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_water_sports"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ספורט ימי"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_bands"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="רצועות וגומיות"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_weights"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="משקולות וכוח"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_mats"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="מזרני כושר"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_gym_offers"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="הטבות לחדרי כושר"
            android:textColor="@color/white"
            android:background="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="right">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dumbbells" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משקולת 10 ק״ג"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/productType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סוג: משקולות וכוח"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/productBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חברה: FitPro"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/productColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צבע: שחור"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="₪199"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDecreaseQuantity"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="-" />

            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnIncreaseQuantity"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddToCartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הוסף לעגלה"
            android:layout_marginTop="16dp"/>

    </LinearLayout>


</LinearLayout>